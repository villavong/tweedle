					<div class="col-md-3" >
						<h2 style="font-size:20px;margin:0 auto;">Country:</h2> 
					</div>
					<div class="col-md-7" style="margin-left:8px;">
						<h><%= @user.country %></h>
					</div>
				</div>

				<div class="row">
					<div class="col-md-3">
						<h2 style="font-size:20px;margin:0 auto;">University:</h2>
					</div>
					<div class="col-md-7" style="margin-left:8px;"> 
						<h><%= @user.school %></h>
					</div>
				</div>

				<div class="row">
					<div class="col-md-3">
						<h2 style="font-size:20px;margin:0 auto;">Major:</h2> 
					</div>
					<div class="col-md-7" style="margin-left:8px;">
						<h><%= @user.major %></h>
					</div>
				</div>

				<div class="row" >
					<div class="col-md-3" >
						<h2 style="font-size:20px;margin:0 auto;">Occupation:</h2> 
					</div>
					<div class="col-md-7" style="margin-left:8px;">
						<h><%= @user.occupation %></h>
					</div>
				</div>

				<div class="row" >
					<div class="col-md-3" >
						<h2 style="font-size:20px;margin:0 auto;">Company:</h2> 
					</div>
					<div class="col-md-7" style="margin-left:8px;">
						<h><%= @user.company_name %></h>
					</div>
				</div>

			</div>


		</div>



		<div class="col-md-8">

			<div class="row">

				<div class="col-md-4">
					<h2 style="font-size:40px;"> <%= @user.username %></h2> 
				</div>

				<div class="col-md-4">
					<div class="msg-btn">
						<%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-message" %>
					</div>
				</div>


				<div class="row col-md-10" style="height:150px;max-height:300px;margin-left:75px;margin-top:20px;">
				<label style="font-weight:bold;font-size:20px;">About Me</label>
					<div class="description">
						<%= @user.description %>
					</div>
				</div>

			</div>


			<div class="row col-md-12" style="height:230px;max-height:270px;margin-top:15px;" id="introduction">

				<div class="col-md-6">

					<h3> School Experience </h3>

					<p><%= @user.school_description %></p>

				

				</div>

				<div class="col-md-6">

					<h3> Job Experience </h3>

					<p><%= @user.occupation_details %></p>

				</div>
			</div>

