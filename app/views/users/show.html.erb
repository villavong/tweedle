		<div style="border: 3px solid grey;width:250px;max-width:250px;">
			
				<div>
					<h2 style="color:black;"><%= reviser.try(:essay_type) %></h2>  
					<%= render 'shared/essayicons', reviser: reviser %>	
				</div>
		
			
