<div class="posts-wrapper">
  <div class="post">
  <div id="contain-pic">
    <div class="thumbnail">
     <%= image_tag user.avatar.url(:medium), :id => "image-tag", class: "portrait" %> 
    </div>
    </div>
    <div class="pad-up">
      <i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i>
    </div>
    <div class="row">
      <div class="user-name">
       <%= truncate( user.username, length:20) %>
     </div>
   </div>
   <div class="post-bottom">
    <div class="caption">
      
      <div class="row">
        <div class="comment-form col-sm-12">
          Univ: <%= truncate( user.school, length: 25) %>

        </div>
      </div>
      <div class="row">
        <div class="comment-form col-sm-12">
          Major: <%= truncate( user.major, length: 24) %>

        </div>
      

    </div>


  </div>
  <div class="comments" >

  </div>

</div>

</div>
</div>

