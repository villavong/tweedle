<%= form_for([@reviser, @reviser.reviews.new]) do |f| %>

<div id="user_stars"></div>

<div class="" style="margin-top:5px;margin-bottom:3px;">
<%= f.text_area :comment, rows: 3, class: "form-control" %>
</div>
<%= f.hidden_field :reviser_id, value: @reviser.id %>

<div class="actions">
	<%= f.submit "Comment", class: "btn btn-primary" %>
</div>

<% end %>

<script>
	$('#user_stars').raty({
		path: '/assets',
		scoreName: 'review[star]',
		score: 1
	});
</script>
