<%= form_for ([@board, @post]) do |f| %>
  <div class="field">
    <%= f.label "Title "%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Content" %><br>
    <!-- <%= f.text_area(:content, rows: 15, "data-provide" => "markdown")%> -->
    <%= f.cktext_area :content, :width => 100 %>

    <!-- <%= f.text_area :content %> -->
  </div>
  <div class="field">
    <%= f.label "Upload Photo" %><br>
    <%= f.file_field :photo, class:"submit btn" %>
  </div>


  <%= f.submit "Create Post", class: "btn btn-primary pull-right" %>
<% end %>
